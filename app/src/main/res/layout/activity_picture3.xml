<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.photohunt.Picture.Picture3"
    android:background="@drawable/bg_game">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/img3A"
        android:src="@drawable/c_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/img3B"
        android:src="@drawable/c_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/img3A"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:background="@drawable/timer_frame2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/timer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="count"
            android:id="@+id/timer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgBtt3_1"
            android:background="@drawable/blank"
            android:layout_above="@+id/imgBtt3_2"
            android:layout_toRightOf="@+id/imgBtt3_2"
            android:layout_toEndOf="@+id/imgBtt3_2"
            android:onClick="onPic3"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgBtt3_2"
            android:layout_marginBottom="14dp"
            android:background="@drawable/blank"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onPic3" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgBtt3_3"
            android:background="@drawable/blank"
            android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgBtt3_1"
            android:layout_toEndOf="@+id/imgBtt3_1"
            android:onClick="onPic3" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgBtt3_4"
            android:background="@drawable/blank"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/imgBtt3_1"
            android:layout_alignRight="@+id/imgBtt3_3"
            android:layout_alignEnd="@+id/imgBtt3_3"
            android:onClick="onPic3" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgBtt3_5"
            android:background="@drawable/blank"
            android:layout_alignTop="@+id/imgBtt3_2"
            android:layout_alignRight="@+id/imgBtt3_4"
            android:layout_alignEnd="@+id/imgBtt3_4"
            android:onClick="onPic3" />

    </RelativeLayout>

</RelativeLayout>
