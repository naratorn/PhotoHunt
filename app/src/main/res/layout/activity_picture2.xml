<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.photohunt.Picture.Picture2"
    android:background="@drawable/bg_game">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/img2A"
        android:src="@drawable/b_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/img2B"
        android:src="@drawable/b_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/img2A"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:background="@drawable/timer_frame2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/timer" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgBtt2_1"
            android:background="@drawable/blank"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onPic2" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgBtt2_2"
            android:background="@drawable/blank"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_alignTop="@+id/imgBtt2_5"
            android:layout_alignLeft="@+id/imgBtt2_1"
            android:layout_alignStart="@+id/imgBtt2_1"
            android:onClick="onPic2" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imgBtt3_3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/blank"
            android:layout_below="@+id/imgBtt2_2"
            android:layout_toRightOf="@+id/imgBtt2_2"
            android:layout_toEndOf="@+id/imgBtt2_2"
            android:onClick="onPic2" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgBtt2_4"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/blank"
            android:layout_alignTop="@+id/imgBtt3_3"
            android:layout_toRightOf="@+id/imgBtt3_3"
            android:layout_toEndOf="@+id/imgBtt3_3"
            android:onClick="onPic2" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgBtt2_5"
            android:background="@drawable/blank"
            android:onClick="onPic2"
            android:layout_below="@+id/imgBtt2_1"
            android:layout_alignLeft="@+id/imgBtt2_4"
            android:layout_alignStart="@+id/imgBtt2_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="count"
            android:id="@+id/timer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
